<div class="form__label">{{ block.settings.id | capitalize }}</div>
<div class="form-check form-switch">
  <input
    class="form-check-input"
    type="checkbox"
    id="{{ "input_" | append: product_id }}"
    form="{{ product_form_id }}"
    name="properties[Need Proof]"
  >
  <label class="form-check-label" for="need_proof">
    Check here if you need a proof before print (
    {{- orp_product.price | money -}}
    )
  </label>
</div>
