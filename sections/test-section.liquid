<section>
  <div>{{ product.title}}</div>
  <div>{{ product.description }}</div>
  {%- for block in section.blocks -%}
    {% case block.type %}
      {%- when 'title' -%}
      <h2>{{ product.title}}</h2>
      {%- when 'description' -%}
      <div>{{ product.description }}</div>
  {% endfor %}
</section>

{% schema %}
{
  "name": "Test Section",
  "settings": [
    {
      "id": "title",
      "type": "text",
      "label": "test section id",
      "default": "TtTTT"
    }
  ],
  "blocks": [
    {
      "name": "Section title",
      "type": "title",
      "settings": [
        {
          "type": "text",
          "id": "section-title",
          "label": "Set section title"
        }
      ]
    }, {
      "name": "Description",
      "type": "description"
    },
    {
      "name": "img",
      "type": "slide",
      "settings": [
        {
          "type": "text",
          "id": "image",
          "label": "Image label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "test aaa section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
